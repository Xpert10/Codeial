<h1>
    Profile
</h1>

<img src="<%= user.avatar%>" alt="<%= user.name%> " width="100px" height="100px">


<% if(locals.user.id==user_profile.id) {%>
    <form action="/users/update/<%=user_profile.id%>"  enctype="multipart/form-data" method="POST">
    <input type="text" name="name" placeholder="New name" value="<%= user_profile.name %>" required>
    <input type="text" name="email" placeholder="New email"  value="<%= user_profile.email %>"required>
    <input type="file" name="avatar" placeholder="Profile Pic">
    <input type="submit" value="Update">

    </form>
    <%}else{%>
        <p>
            <%= user_profile.name %>
            <%= user_profile.email %>
        </p>
        <%}%>