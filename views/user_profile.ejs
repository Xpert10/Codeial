<h1>
    Profile
</h1>


<% if(locals.user.id==user_profile.id) {%>
    <form action="/users/update/<%=user_profile.id%>" method="POST">
    <input type="text" name="name" placeholder="New name" value="<%= user_profile.name %>" required>
    <input type="text" name="email" placeholder="New email"  value="<%= user_profile.email %>"required>
    <input type="submit" value="Update">

    </form>
    <%}else{%>
        <p>
            <%= user_profile.name %>
            <%= user_profile.email %>
        </p>
        <%}%>